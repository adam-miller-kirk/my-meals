// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum DayType {
  RECIPE
  TAKEAWAY
  OTHER
}

model Ingredient {
  id            String       @id @default(uuid())
  name          String
  description   String?
  weight        String?
  Recipe        Recipe?      @relation(fields: [recipeId], references: [id])
  recipeId      String?
  Instruction   Instruction? @relation(fields: [instructionId], references: [id])
  instructionId String?
}

model Instruction {
  id          String       @id @default(uuid())
  name        String
  description String?
  time        String
  ingredients Ingredient[]
  Recipe      Recipe?      @relation(fields: [recipeId], references: [id])
  recipeId    String?
}

model Recipe {
  id           String        @id @default(uuid())
  name         String
  description  String?
  ingredients  Ingredient[]
  instructions Instruction[]
  plannerDays  PlannerDay[]
}

model PlannerDay {
  id          String      @id @default(uuid())
  date        DateTime    @unique
  type        DayType // ENUM: RECIPE, TAKEAWAY, OTHER
  recipe      Recipe?     @relation(fields: [recipeId], references: [id])
  recipeId    String?
  notes       String?
  plannerWeek PlannerWeek @relation(fields: [weekId], references: [id])
  weekId      String
}

model PlannerWeek {
  id          String       @id @default(uuid())
  startDate   DateTime // e.g. Monday of the week
  year        Int
  plannerDays PlannerDay[]
  plannerYear PlannerYear  @relation(fields: [yearId], references: [id])
  yearId      String
}

model PlannerYear {
  id           String        @id @default(uuid())
  year         Int           @unique
  plannerWeeks PlannerWeek[]
}
